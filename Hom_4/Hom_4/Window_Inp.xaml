<Window x:Class="Hom_4.Window_Inp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hom_4"
        mc:Ignorable="d"
        Title="Введите число для элементов массива" Height="250" Width="400" WindowStartupLocation="CenterScreen" >
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black" Offset="0"/>
                <GradientStop Color="#FFF4B33D" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <TextBox x:Name="tb_Inp" Margin="10,83,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="198" FontFamily = "Britanic Bold" FontSize = "20" Height = "37"  HorizontalAlignment="Left" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" />
        <Button x:Name="bt_Inp" Content="Принять число" HorizontalAlignment="Left" Margin="224,83,0,0" VerticalAlignment="Top" Height="37" Width="160" FontFamily="Impact" FontSize="15" FontWeight="Normal" RenderTransformOrigin="0.545,0.768" Click="bt_Inp_Click"/>
        <Label Content="Допустимый размер массива 50 элементов" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,184,0,0" Width="374" />

    </Grid>

</Window>
